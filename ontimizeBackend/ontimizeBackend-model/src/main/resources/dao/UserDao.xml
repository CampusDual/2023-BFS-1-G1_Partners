<?xml version="1.0" encoding="UTF-8"?>
<JdbcEntitySetup
    xmlns="http://www.ontimize.com/schema/jdbc"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.ontimize.com/schema/jdbc http://www.ontimize.com/schema/jdbc/ontimize-jdbc-dao.xsd"
    catalog="" schema="${mainschema}" table="tuser"
    datasource="mainDataSource" sqlhandler="dbSQLStatementHandler">
    <DeleteKeys>
        <Column>user_</Column>
    </DeleteKeys>
    <UpdateKeys>
        <Column>user_</Column>
    </UpdateKeys>
    <Queries>
        <Query id="default">

            <AmbiguousColumns>
                <AmbiguousColumn name="user_" prefix="u" />
            </AmbiguousColumns>

            <ValidColumns>
                <Column>user_</Column>
                <Column>password</Column>
                <Column>name</Column>
                <Column>surname</Column>
                <Column>email</Column>
                <Column>userblocked</Column>
                <Column>lastpasswordupdate</Column>
                <Column>firstlogin</Column>
            </ValidColumns>
            <Sentence>
                <![CDATA[
                    SELECT
                        #COLUMNS#, ur.id_rolename rol
                    FROM
                        ${mainschema}.tuser u
                        JOIN ${mainschema}.tuser_role ur ON u.user_ = ur.user_
                    #WHERE#
                ]]>
            </Sentence>
        </Query>    
        <Query id="login">
            <ValidColumns>

                <Column>user_</Column>
                <Column>password</Column>
                <Column>name</Column>
                <Column>surname</Column>
                <Column>email</Column>
                <Column>userblocked</Column>
                <Column>lastpasswordupdate</Column>
                <Column>firstlogin</Column>
            </ValidColumns>
            <Sentence>
                <![CDATA[
                    SELECT 
                        #COLUMNS#
                    FROM                        
                        ${mainschema}.tuser
                    #WHERE#
                ]]>
            </Sentence>
        </Query>




        <Query id="partners">

            <AmbiguousColumns>
                <AmbiguousColumn name="user_" prefix="u" />
                <AmbiguousColumn name="name" prefix="u" />

            </AmbiguousColumns>
            <ValidColumns>

                <Column>user_</Column>
                <Column>password</Column>
                <Column>name</Column>
                <Column>surname</Column>
                <Column>email</Column>
                <Column>userblocked</Column>
                <Column>lastpasswordupdate</Column>
                <Column>firstlogin</Column>


            </ValidColumns>
            <Sentence>
                <![CDATA[
                    SELECT
                        u.user_,u.name,u.surname,u.email, STRING_AGG(p.name::text, ', ') AS productName
                    FROM
                        ${mainschema}.tuser u
                        JOIN ${mainschema}.tuser_role ur ON u.user_ = ur.user_
                        JOIN ${mainschema}.trole r ON ur.id_rolename = r.id_rolename AND r.rolename = 'partner'
                        LEFT JOIN product_user pu ON pu.user_id = u.user_
                        LEFT JOIN products p ON pu.product_id = p.id
                    #WHERE#
                    GROUP BY u.user_,u.name,u.surname,u.email

                ]]>
            </Sentence>
        </Query>


        <Query id="admins">

            <AmbiguousColumns>
                <AmbiguousColumn name="user_" prefix="u" />
                <AmbiguousColumn name="name" prefix="u" />

            </AmbiguousColumns>
            <ValidColumns>

                <Column>user_</Column>
                <Column>password</Column>
                <Column>name</Column>
                <Column>surname</Column>
                <Column>email</Column>
                <Column>userblocked</Column>
                <Column>lastpasswordupdate</Column>
                <Column>firstlogin</Column>


            </ValidColumns>
            <Sentence>
                <![CDATA[
                    SELECT
                        u.user_,u.name,u.surname,u.email
                    FROM
                        ${mainschema}.tuser u
                        JOIN ${mainschema}.tuser_role ur ON u.user_ = ur.user_
                        JOIN ${mainschema}.trole r ON ur.id_rolename = r.id_rolename AND r.rolename = 'admin'
                ]]>
            </Sentence>
        </Query>



    </Queries>
</JdbcEntitySetup>